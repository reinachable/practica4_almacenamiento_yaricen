        android:paddingBottom="16dp" />

    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:backgroundTint="#55CCDC"
        android:text="Guardar" />

</LinearLayout>